{{- "<?xml version=\"1.0\" encoding=\"UTF-8\"?>" | safeHTML }}
<feed xmlns="http://www.w3.org/2005/Atom">
    <title>{{ .Site.Title | safeHTML }}</title>
    <link href="{{ .Site.BaseURL }}/atom.xml" rel="self"/>
    <link href="{{ .Site.BaseURL }}/"/>
    <updated>{{ .Date | safeHTML }}</updated>
    <id>{{ .Site.BaseURL }}/</id>
    <author>
        <name>{{ .Site.Params.author | safeHTML }}</name>
    </author>

    {{ range .Pages }}
        {{ if not .Draft }}
            <entry>
                <title>{{ .Title | safeHTML }}</title>
                <link href="{{ .Permalink }}"/>
                <id>{{ .Permalink }}</id>
                <published>{{ .Date | safeHTML }}</published>
                <updated>{{ .Date | safeHTML }}</updated>
                <author>
                    <name>{{ .Params.author | safeHTML }}</name>
                </author>
                <content type="html">{{ .Content | safeHTML }}</content>
                {{ with .Params.tags }}
                    {{ range . }}
                        <category term="{{ . | safeHTML }}"/>
                    {{ end }}
                {{ end }}
            </entry>
        {{ end }}
    {{ end }}
</feed>
